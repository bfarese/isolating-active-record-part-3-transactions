<div class="grid-x">
  <div class="cell small-offset-2 small-6">
    <h1>New User</h1>

    <%= render 'errors', errors: @errors || NullErrors.new %>

    <%= form_with scope: :user, url: users_path, local: true do |form| %>
      <%= form.label :name %>
      <%= form.text_field :name %>

      <%= form.label :email %>
      <%= form.text_field :email %>

      <%= form.submit %>
    <% end %>
  </div>
</div>
